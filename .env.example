# Example .env for staffai
# Copy to .env and fill values (or use Docker secrets for DISCORD_BOT_TOKEN and OPENWEBUI_API_KEY)

# IMPORTANT: For production with docker-compose, place secrets in ./secrets/discord_bot_token.txt
# and ./secrets/openwebui_api_key.txt (plain value, no quotes). When running locally you can uncomment
# the corresponding lines below instead.

# --- Essential (use Docker secret in production) ---
# DISCORD_BOT_TOKEN="your-discord-bot-token-here"   # OPTIONAL - prefer using Docker secret file

# --- Channel IDs ---
WELCOME_CHANNEL_ID="818274392479629362"

# --- Bot Behavior ---
RESPONSE_CHANCE=0.05
MAX_HISTORY_PER_USER=20

# --- LLM / OpenWebUI ---
OPENWEBUI_API_URL=http://open-webui:8080
OPENWEBUI_MODEL=your_model_name
# OPENWEBUI_API_KEY=sk-xxxx (OPTIONAL - prefer using Docker secret file)
KNOWLEDGE_ID=
LIST_TOOLS=websearch,server:0
RESTRICTED_LIST_TOOLS=server:5
LLM_RESPONSE_VALIDATION_RETRIES=2

# --- Context decay (seconds) ---
# How long to keep per-user/channel conversation history after last save (0 = never expire)
CONTEXT_HISTORY_TTL_SECONDS=1800
# How old individual messages can be before being purged from context (0 = no age limit)
CONTEXT_MESSAGE_MAX_AGE_SECONDS=1800

# --- Redis ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password_if_any

# --- Logging ---
LOG_LEVEL=INFO

# --- Super users & ignored roles ---
SUPER_ROLE_IDS=
IGNORED_ROLE_IDS=

# --- Rate limiting & restriction system ---
RATE_LIMIT_COUNT=15
RATE_LIMIT_WINDOW_SECONDS=60
TOKEN_RATE_LIMIT_COUNT=20000
RESTRICTED_USER_ROLE_ID=
RESTRICTED_CHANNEL_ID=
RATE_LIMIT_MESSAGE_USER="You've sent messages too frequently. Please use <#{channel_id}> for bot interactions."
RESTRICTED_CHANNEL_MESSAGE_USER="As a restricted user, please use <#{channel_id}> for bot interactions."
RESTRICTION_DURATION_SECONDS=86400
RESTRICTION_CHECK_INTERVAL_SECONDS=300

# --- Profile scoring ---
PROFILE_MAX_SCORED_MESSAGES=50

# --- SpaCy models (optional) ---
SPACY_EN_MODEL_NAME=en_core_web_sm
SPACY_ES_MODEL_NAME=es_core_news_sm

# --- Random response delivery / worthiness ---
RANDOM_RESPONSE_DELIVERY_CHANCE=0.3
WORTHINESS_MIN_LENGTH=10
WORTHINESS_MIN_SIGNIFICANT_WORDS=2

# --- Activity / Presence ---
ACTIVITY_UPDATE_INTERVAL_SECONDS=300
BASE_ACTIVITY_SYSTEM_PROMPT_PATH=utils/prompts/base_activity_system_prompt.txt
ACTIVITY_SCHEDULE_ENABLED=False
ACTIVITY_ACTIVE_START_HOUR_UTC=0
ACTIVITY_ACTIVE_END_HOUR_UTC=23
ACTIVITY_ACTIVE_DAYS_UTC=0,1,2,3,4,5,6

# --- Optional: other keys used by code ---
# LIST_TOOLS and RESTRICTED_LIST_TOOLS defined above
# KNOWLEDGE_ID defined above

# End of example .env
